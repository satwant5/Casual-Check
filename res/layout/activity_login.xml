<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" 
    android:background="@drawable/bkgimg"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="430dp"
         >
       

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/header"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- Physician Email Label -->

            <TextView
                android:id="@+id/text_patientid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Patient ID"
                android:textColor="#372c24" 
               	style="@style/ButtonText"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edittext_patientid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:hint="3-30 characters,nospace"
                android:textColorHint="#70ff0000"
                android:singleLine="true" />

            <!-- Patientid Label -->

            <TextView
                android:id="@+id/text_physianemail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Physician&apos;s Email id"
                android:textColor="#372c24" 
                style="@style/ButtonText"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edittext_physianemail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
               	android:hint="example@gmail.com"
                android:textColorHint="#70ff0000"
                android:singleLine="true" 
                />

            <!-- Login button -->

            <Button
                android:id="@+id/btnLogin"
                style="@style/ButtonText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dip"
                android:background="@drawable/bluebutton"
                android:text="Submit" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>