<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="@drawable/bkgimg"
    >

 <Button
     android:id="@+id/settings"
     style="@style/ButtonText"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/tktest"
     android:layout_alignLeft="@+id/demotest"
     android:layout_alignRight="@+id/demotest"
     android:layout_marginTop="50dp"
     android:background="@drawable/purplebtn"
     android:gravity="center_horizontal"
     android:text="Settings" />

 <Button
     android:id="@+id/tktest"
     style="@style/ButtonText"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/demotest"
     android:layout_alignLeft="@+id/demotest"
     android:layout_alignRight="@+id/demotest"
     android:layout_marginBottom="58dp"
     android:background="@drawable/purplebtn"
     android:gravity="center_horizontal"
     android:text="Take Test" />
 <Button
     android:id="@+id/demotest"
     style="@style/ButtonText"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="84dp"
     android:background="@drawable/purplebtn"
     android:text="Demo Test" />


    
</RelativeLayout>